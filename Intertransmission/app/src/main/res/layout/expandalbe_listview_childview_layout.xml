<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="#5ddd">

    <View
        android:id="@+id/view_send_recevice_flag"
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/img_icon"
        android:layout_toRightOf="@id/view_send_recevice_flag"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_file_download_white_36pt_3x" />

    <LinearLayout
        android:id="@+id/lin_fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/delete"/>
    </LinearLayout>


    <LinearLayout
        android:layout_toRightOf="@id/img_icon"
        android:layout_toLeftOf="@id/lin_fun"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/DownloadProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="13sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_send_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#888" />

            <TextView
                android:id="@+id/txt_send_size"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="#888" />

            <TextView
                android:id="@+id/txt_state"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="#888"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>